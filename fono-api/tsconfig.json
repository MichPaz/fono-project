{
    "ts-node": {
        "files": true
    },
    "files": [
        // "node_modules/@types",
        "./src/@types/index.d.ts"
    ],
    "compilerOptions": {
        "types": ["node"],
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": false,
        "strict": true,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "./src/@types/index.d.ts"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/__test__"
    ]
}